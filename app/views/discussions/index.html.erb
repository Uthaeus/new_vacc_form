<div class="container large-marg">

  <h1 class="mid-marg">Discussions</h1>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="3"></th>
        <th>Created</th>
        <th>By</th>
      </tr>
    </thead>

    <tbody>
      <% @discussions.each do |discussion| %>
        <tr>
          <td><%= link_to discussion.title, discussion, class: 'btn' %></td>
          <td colspan="3"></td>
          <td><%= distance_of_time_in_words(discussion.created_at, Time.now) %> ago</td>
          <td><%= discussion.user.first_name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <div class="large-marg col-4">
    <%= link_to 'New Discussion', new_discussion_path, class: 'btn btn-outline-primary btn-block' %>
  </div>
</div>
