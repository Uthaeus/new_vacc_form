<div class="container large-marg">

  <h1 class="mid-marg">Discussions</h1>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Created</th>
        <th>By</th>
      </tr>
    </thead>

    <tbody>
      <% @discussions.each do |discussion| %>
        <tr>
          <td><%= link_to discussion.title, discussion %></td>
          <td><%= distance_of_time_in_words(discussion.created_at, Time.now) %> ago</td>
          <td><%= discussion.user.first_name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <div class="large-marg col-3">
    <%= link_to 'New Discussion', new_discussion_path, class: 'btn btn-outline-info btn-block' %>
  </div>
</div>
